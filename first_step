all:
	reset
	
	add-apt-repository ppa:ubuntu-toolchain-r/test && apt update &&
	apt-get -y install build-essential gcc-7 g++-7 &&
	update-alternatives --install /usr/bin/gcc gcc /usr/bin/gcc-7 60 &&
	update-alternatives --install /usr/bin/g++ g++ /usr/bin/g++-7 60 &&
	sudo apt install libncurses5-dev  -y &&
	sudo apt install libncursesw5-dev -y &&
	sudo apt install libsqlite3-dev -y &&
	sudo apt-get install libgtk-3-dev -y &&
	 clear
	@echo "All instaled now insert make into console and compile the c++ algorithm"
 
.SILENT:

.IGNORE: